generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==========================================
// PRODUCTS
// ==========================================

model Product {
  id              String      @id @default(cuid())
  name            String
  description     String
  price           Int
  category        String
  image           String?
  isPopular       Boolean     @default(false)
  isNew           Boolean     @default(false)
  discountPercent Int?        // Diskon dalam persen (10 = 10%)
  averageRating   Float?      // Rating rata-rata (1-5)
  reviewCount     Int         @default(0)
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  
  // Relations
  orderItems      OrderItem[]
  cartItems       CartItem[]
  wishlists       Wishlist[]
  reviews         Review[]
  modifiers       ProductModifier[]
}

model Category {
  id    String  @id @default(cuid())
  name  String
  slug  String  @unique
  icon  String?
}

// ==========================================
// USERS & AUTH
// ==========================================

model User {
  id         String     @id @default(cuid())
  email      String     @unique
  password   String     // Hashed password menggunakan bcrypt
  name       String
  phone      String?
  address    String?
  role       String     @default("customer") // customer, admin
  points     Int        @default(0)          // Loyalty points
  memberTier String     @default("bronze")   // bronze, silver, gold
  createdAt  DateTime   @default(now())
  
  // Relations
  orders    Order[]
  cart      Cart?
  wishlists Wishlist[]
  reviews   Review[]
}

// ==========================================
// CART
// ==========================================

model Cart {
  id        String     @id @default(cuid())
  userId    String     @unique
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     CartItem[]
  updatedAt DateTime   @updatedAt
}

model CartItem {
  id        String  @id @default(cuid())
  cartId    String
  cart      Cart    @relation(fields: [cartId], references: [id], onDelete: Cascade)
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
  modifiers Json?   // Customization: {size: "Large", sugar: "50%", toppings: [...]}

  @@unique([cartId, productId])
}

// ==========================================
// ORDERS
// ==========================================

model Order {
  id          String      @id @default(cuid())
  userId      String
  user        User        @relation(fields: [userId], references: [id])
  items       OrderItem[]
  total       Int
  status      String      @default("pending") // pending, confirmed, preparing, ready, delivered, cancelled
  notes       String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  
  // Relations
  reviews     Review[]
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id])
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
  price     Int       // Harga saat order (bisa beda dari harga produk sekarang)
  modifiers Json?     // Customization snapshot at order time
}

// ==========================================
// SITE SETTINGS
// ==========================================


model Banner {
  id        String   @id @default(cuid())
  title     String
  subtitle  String?
  image     String?
  link      String?
  isActive  Boolean  @default(true)
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ==========================================
// WISHLIST
// ==========================================

model Wishlist {
  id        String   @id @default(cuid())
  userId    String
  productId String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, productId])
}

// ==========================================
// COUPON / PROMO
// ==========================================

model Coupon {
  id          String   @id @default(cuid())
  code        String   @unique
  discount    Int      // Persentase diskon (10 = 10%)
  minPurchase Int?     // Minimal pembelian (optional)
  maxUses     Int?     // Maksimal penggunaan (optional)
  usedCount   Int      @default(0)
  validFrom   DateTime
  validUntil  DateTime
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
}

// ==========================================
// SITE SETTINGS
// ==========================================

model SiteSetting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String   @db.Text
  label     String   // Label untuk admin panel
  group     String   // Grouping: 'identity', 'contact', 'social', 'footer'
  type      String   @default("text") // text, textarea, url, email, phone
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ==========================================
// REVIEWS
// ==========================================

model Review {
  id          String   @id @default(cuid())
  userId      String
  productId   String
  orderId     String?  // For "Verified Purchase" badge
  rating      Int      // 1-5 stars
  comment     String?  @db.Text
  isVerified  Boolean  @default(false) // Verified purchase
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  order       Order?   @relation(fields: [orderId], references: [id])
  
  @@unique([userId, productId]) // One review per user per product
}

// ==========================================
// PRODUCT MODIFIERS (Customization)
// ==========================================

model ProductModifier {
  id        String  @id @default(cuid())
  productId String
  name      String  // "Size", "Sugar Level", "Topping"
  type      String  @default("single") // single (radio) or multi (checkbox)
  required  Boolean @default(false)
  options   Json    // [{label: "Regular", price: 0}, {label: "Large", price: 5000}]
  sortOrder Int     @default(0)
  
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

// ==========================================
// NOTIFICATIONS
// ==========================================

model Notification {
  id        String   @id @default(cuid())
  userId    String
  type      String   // order_status, promo, loyalty
  title     String
  message   String   @db.Text
  data      Json?    // Additional data like orderId
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}