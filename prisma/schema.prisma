generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==========================================
// PRODUCTS
// ==========================================

model Product {
  id          String      @id @default(cuid())
  name        String
  description String
  price       Int
  category    String
  image       String?
  isPopular   Boolean     @default(false)
  isNew       Boolean     @default(false)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  
  // Relations
  orderItems  OrderItem[]
  cartItems   CartItem[]
}

model Category {
  id    String  @id @default(cuid())
  name  String
  slug  String  @unique
  icon  String?
}

// ==========================================
// USERS & AUTH
// ==========================================

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String   // Hashed password menggunakan bcrypt
  name      String
  phone     String?
  address   String?
  role      String   @default("customer") // customer, admin
  createdAt DateTime @default(now())
  
  // Relations
  orders    Order[]
  cart      Cart?
}

// ==========================================
// CART
// ==========================================

model Cart {
  id        String     @id @default(cuid())
  userId    String     @unique
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     CartItem[]
  updatedAt DateTime   @updatedAt
}

model CartItem {
  id        String  @id @default(cuid())
  cartId    String
  cart      Cart    @relation(fields: [cartId], references: [id], onDelete: Cascade)
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int

  @@unique([cartId, productId]) // Satu product hanya sekali per cart
}

// ==========================================
// ORDERS
// ==========================================

model Order {
  id          String      @id @default(cuid())
  userId      String
  user        User        @relation(fields: [userId], references: [id])
  items       OrderItem[]
  total       Int
  status      String      @default("pending") // pending, confirmed, preparing, ready, delivered, cancelled
  notes       String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id])
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
  price     Int     // Harga saat order (bisa beda dari harga produk sekarang)
}

// ==========================================
// SITE SETTINGS
// ==========================================

model SiteSetting {
  id        String   @id @default(cuid())
  key       String   @unique  // e.g., "hero_title", "instagram_url"
  value     String   @db.Text
  category  String   // "homepage", "social", "general"
  updatedAt DateTime @updatedAt
}

model Banner {
  id        String   @id @default(cuid())
  title     String
  subtitle  String?
  image     String?
  link      String?
  isActive  Boolean  @default(true)
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}